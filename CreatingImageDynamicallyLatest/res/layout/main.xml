<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="fill"
        android:padding="15dip"
        android:text="Enter ur name Kiddy"
        android:textColor="#0587d9"
        android:textSize="26dip"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_margin="10dip"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
        android:ems="10"
        android:hint="Enter name"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btnSpeak"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtText"
        android:layout_margin="10dip"
        android:enabled="false"
        android:text="Save" />

    <ImageView
        android:id="@+id/ImageAnimation1"
        android:layout_width="200dp"
        android:layout_height="327dp"
        android:layout_alignLeft="@+id/btnSpeak"
        android:layout_alignParentBottom="true"
        android:src="@anim/anim_numbers" />

    <ImageView
        android:id="@+id/ImageAnimation2"
        android:layout_width="200dp"
        android:layout_height="327dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnSpeak"
        android:layout_marginRight="36dp"
        android:src="@anim/anim_numbers" />

    <ImageView
        android:id="@+id/imageAnimation"
        android:layout_width="200dp"
        android:layout_height="327dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="149dp"
        android:layout_toLeftOf="@+id/ImageAnimation2"
        android:src="@anim/anim_numbers" />

</RelativeLayout>